{
  "name": "config-loaders",
  "version": "0.1.2",
  "description": "Collect and parse configuration from different sources",
  "keywords": [
    "config",
    "configuration",
    "env",
    "environment",
    "file",
    "loader",
    "yaml"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/alxevvv/config-loaders"
  },
  "license": "MIT",
  "author": "alxevvv <alxevvv@gmail.com>",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "clean": "rimraf ./dist",
    "format": "prettier --write .",
    "lint": "eslint ./{,src,test}/**/*.ts ./*.ts",
    "lint:fix": "eslint ./{,src,test}/**/*.ts ./*.ts --fix",
    "prepare": "husky install",
    "test": "vitest run",
    "test:cov": "vitest run --coverage --silent",
    "test:watch": "vitest --watch"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "findup-sync": "^5.0.0",
    "json-string-values-parser": "^0.1.1",
    "lodash.merge": "^4.6.2",
    "lodash.set": "^4.3.2",
    "optional-require": "^1.1.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/findup-sync": "^4.0.2",
    "@types/lodash.merge": "^4.6.7",
    "@types/lodash.set": "^4.3.7",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitest/coverage-c8": "^0.31.4",
    "dotenv": "^16.1.4",
    "dotenv-expand": "^10.0.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "require-in-the-middle": "^7.1.1",
    "rimraf": "^5.0.1",
    "tsup": "^6.7.0",
    "type-fest": "^3.11.1",
    "typescript": "^5.1.3",
    "vitest": "^0.31.4",
    "yaml": "^2.3.1"
  },
  "optionalDependencies": {
    "dotenv": "^16.1.4",
    "dotenv-expand": "^10.0.0",
    "yaml": "^2.3.1"
  }
}
